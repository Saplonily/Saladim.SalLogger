<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>netstandard2.1;netstandard2.0;net6.0;net7.0</TargetFrameworks>
		<LangVersion>preview</LangVersion>
		<PlatformTarget>AnyCPU</PlatformTarget>
		<Title>Saladim.SalLogger</Title>
		<Authors>Saplonily</Authors>
		<Description>A very simple light logger.</Description>
		<PackageProjectUrl>https://www.nuget.org/packages/Saladim.SalLogger/</PackageProjectUrl>
		<RepositoryUrl>https://github.com/saladim-org/Saladim.SalLogger</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PackageTags>log;logger;light weight</PackageTags>
		<PackageReleaseNotes>加入一个绕过格式化器的LogRaw方法</PackageReleaseNotes>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<GeneratePackageOnBuild>False</GeneratePackageOnBuild>
		<DefineConstants>$(DefineConstants)</DefineConstants>

		<Version>1.3.0</Version>
	</PropertyGroup>

	<ItemGroup>
		<None Include="..\README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

</Project>
